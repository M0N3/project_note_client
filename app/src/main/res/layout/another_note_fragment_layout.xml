<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"
            android:onClick="onAnotherNoteFragmentClick"
            android:id="@+id/search_another_note" android:layout_gravity="right"
            android:layout_alignBottom="@+id/Edit_another_note" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/anotherRecyclerView"
            android:padding="10dp" android:layout_below="@+id/search_another_note" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <EditText
            android:layout_marginTop="60dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:id="@+id/Edit_another_note"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:theme="@style/Theme.App.Base"
            android:layout_width="wrap_content"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/search_another_note"
            android:layout_toStartOf="@+id/search_another_note"/>
</RelativeLayout>