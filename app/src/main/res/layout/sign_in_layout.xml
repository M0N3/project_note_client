<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/titleText"
            android:textColor="@color/colorWhite"
            android:id="@+id/titleView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/loginText"
            android:textColor="@color/colorWhite"
            android:id="@+id/loginView"
            android:layout_marginTop="105dp" android:layout_below="@+id/titleView"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginEdit" android:layout_below="@id/loginView" android:layout_centerHorizontal="true"
            android:inputType="text"
            android:theme="@style/Theme.App.Base"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/passwordText"
            android:textColor="@color/colorWhite"
            android:id="@+id/passwordView"
            android:layout_marginTop="44dp" android:layout_below="@+id/loginEdit"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEdit"
            android:theme="@style/Theme.App.Base" android:layout_below="@+id/passwordView"
            android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signinbtn"
            android:id="@+id/signinbtn"
            android:onClick="signInClick"
            android:layout_marginBottom="44dp" android:layout_above="@+id/registrationbtn"
            android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registrationbtn"
            android:id="@+id/registrationbtn"
            android:onClick="registrationClick"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"/>
</RelativeLayout>