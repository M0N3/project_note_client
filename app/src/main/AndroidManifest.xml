<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.monz.project_note.app">

    <uses-permission android:name="android.permission.INTERNET" ></uses-permission>
    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:theme="@style/AppTheme">
        <activity android:name=".SignInActivity">
    <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
    </intent-filter>
            <intent-filter>
                <action android:name="ANDROID.INTENT.ACTION.SEARCH"/>
            </intent-filter>
</activity>
        <activity android:name=".CreateNoteActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".MainActivity" android:configChanges="orientation|screenSize" android:theme="@style/Theme.App.Base">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/search"/>
        </activity>
        <activity android:name=".RegistrationActivity"/>
    </application>
</manifest>
